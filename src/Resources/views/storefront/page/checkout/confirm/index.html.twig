{% sw_extends '@Storefront/storefront/page/checkout/confirm/index.html.twig' %}

{% block base_body_script %}
    {{ parent() }}

    {# Provide WhitelabelMachineName integration data if available in page extensions #}
    {% if page.extensions.weArePlanetData %}
        {% set plnData = page.extensions.weArePlanetData %}

        {# Hidden inputs required by the JS components #}
        <input type="hidden" id="cartRecreateUrl" value="{{ plnData.cartRecreateUrl }}" />
        <input type="hidden" id="checkoutUrl" value="{{ plnData.checkoutUrl }}" />

        {# Load WhitelabelMachineName SDK scripts #}
        {% if plnData.deviceJavascriptUrl %}
            <script src="{{ plnData.deviceJavascriptUrl }}" async="async"></script>
        {% endif %}
        {% if plnData.javascriptUrl %}
            <script src="{{ plnData.javascriptUrl }}"></script>
        {% endif %}

        {# We don't need app.js if we use the modern plugin, but we might keep it for now if other pages depend on it.
           However, for the confirm page, the modern plugin registered in main.js will take over
           whenever it finds [data-weareplanet-checkout-plugin]. #}
    {% endif %}
{% endblock %}
